{
  "expo": {
    "name": "Potentia",
    "slug": "potentia",
    "version": "0.1.0",
    "scheme": "potentia",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.potentia.app"
    },
    "android": {
      "package": "com.potentia.app",
      "usesCleartextTraffic": true
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font",
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "apiUrl": "http://192.168.0.122:8000",
      "wsUrl": "ws://192.168.0.122:8000",
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
