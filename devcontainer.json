{
  "name": "Project Potentia (Docker-Compose)",
  // Pastikan path ini benar menunjuk ke file docker-compose Anda
  "dockerComposeFile": "../docker-compose.yml",

  // GANTI "app" dengan nama service utama Anda di file docker-compose.yml
  "service": "backend-1", 

  // GANTI "/app" dengan path folder kerja di dalam container Anda
  "workspaceFolder": "/app",

  // Buka port aplikasi Anda secara otomatis
  "forwardPorts": [8000], // GANTI 8000 dengan port Anda

    "extensions": [
        "ms-python.python",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
    ]
}